public static void main(String[] args) {
        // merge 2 arrays

        int[] arr1 = {1, 2, 3, 4};
        int[] arr2 = {5, 6, 7};

        int [] merge  = new int [arr1.length+arr2.length];

        int k=0;

        for (int i = 0; i < arr1.length; i++, k++) {
            merge[k]=arr1[i];
        }

        for (int i = 0; i < arr2.length; i++,k++) {
            merge [k]=arr2[i];
        }

        System.out.println(Arrays.toString(merge));
    }
}